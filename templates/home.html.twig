{% extends "base.html.twig" %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.flashes('error') %}
		<div class="alert alert-error">
			{{ message }}
		</div>
	{% endfor %}
	{% include "partials/header.html.twig" with {'title': 'p√©pettes', 'subtitle': 'sortir entre filles sans chichis'} %}
	<section class="flex flex-col px-container">
		<div class="flex justify-between">
			<h3>c'est tout frais</h3>
			<a href="{{ path('app_place_new') }}" class="self-center bg-green border-1px border-black font-commune text-30 px-15 rounded-full h-[fit-content]">ajouter une adresse</a>
		</div>
		<div class="flex gap-x-20">
			{% for place in places|slice(0, 3) %}
				{% if loop.index == 1 %}
					{% include "partials/card.html.twig" with {'size': 'small'} %}
				{% endif %}
				{% if loop.index == 2 %}
					{% include "partials/card.html.twig" with {'size': 'large'} %}
				{% endif %}
				{% if loop.index == 3 %}
					{% include "partials/card.html.twig" with {'size': 'medium'} %}
				{% endif %}
			{% endfor %}
		</div>
	</section>
	{% include "partials/baseline.html.twig" %}
{% endblock %}
