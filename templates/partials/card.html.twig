{% if size == "small" %}
<a href="{{ path('app_place_show', {id: place.id}) }}" class="h-340 border-1px border-black w-3/12 bg-white grid grid-rows-4">
{% elseif size == "medium" %}
<a href="{{ path('app_place_show', {id: place.id}) }}" class="h-340 border-1px border-black w-4/12 bg-white grid grid-rows-4">
{% elseif size == "large" %}
<a href="{{ path('app_place_show', {id: place.id}) }}" class="h-340 border-1px border-black w-5/12 bg-white grid grid-rows-4">
{% elseif size == "grid" %}
<a href="{{ path('app_place_show', {id: place.id}) }}" class="h-340 border-1px border-black w-full bg-white grid grid-rows-4">
{% endif %}
	<div class="overflow-hidden row-span-3 border-b-1px border-b-black">
		<img class="object-cover h-full w-full" src="{{ asset('images/places/' ~ place.imageFilename) }}" alt="{{ place.imageFilename }}">
	</div>
	<div class="flex flex-col p-15 row-start-4">
		<div class="flex justify-between">
			<div class="font-commune text-30 leading-[100%]">{{ place.name }}</div>
			<div class="border-1px border-black rounded-full px-30">{{ place.tags.first }}</div>
		</div>
		<div>{{ place.city }}</div>
	</div>
</a>