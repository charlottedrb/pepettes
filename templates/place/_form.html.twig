{{ form_start(form, {'attr': {'class': 'flex flex-col gap-y-20'}}) }}
{{ form_widget(form.name) }}
{{ form_widget(form.description) }}
<div class="flex w-full gap-x-20">
	<div class="w-full">{{ form_row(form.price_range) }}</div>
	<div class="w-full">{{ form_row(form.security_level) }}</div>
	<div class="w-full">{{ form_row(form.charo_rate) }}</div>
</div>
<div class="flex w-full gap-x-20">
	<div>{{ form_row(form.has_cocktails) }}</div>
	<div>{{ form_row(form.has_beers) }}</div>
	<div>{{ form_row(form.has_wines) }}</div>
	<div>{{ form_row(form.has_softs) }}</div>
</div>
<div class="flex gap-x-10 w-full">
	<div class="w-full">{{ form_row(form.tips) }}</div>
	<div class="w-full">{{ form_row(form.recommandations) }}</div>
</div>
<div>
	<div class="font-commune text-30">{{ form_label(form.tags) }}</div>
	<div>{{ form_widget(form.tags) }}</div>
</div>
<div>
	<div class="font-commune text-30">{{ form_label(form.city) }}</div>
	<div>{{ form_widget(form.city) }}</div>
</div>
{% if imageFilename is defined %}
	<div class="h-[20vh] overflow-hidden">
		<img src="{{ asset('images/places/' ~ imageFilename) }}" alt="Image de l'Ã©tablissement" class="w-1/2">
	</div>
{% endif %}
{{ form_widget(form.imageFilename) }}
<button class="font-commune bg-green hover:bg-blue border-1px border-black text-30 transition-all">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
